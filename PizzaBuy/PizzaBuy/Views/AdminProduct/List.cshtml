@model List<PizzaBuy.Models.Domain.Product>
@{
}

<div>
    <h1 class="mt-3 mb-3 h3">
        <br />
        <br />
        <br />
    </h1>
    <div class="bg-secondary bg-opacity-10 py-2" style="background: linear-gradient(to right, #D14545, #FFD045);">
    <div class="container">
        <h1>Add New Product - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card" style="width: 100%;">
                    <img src="@product.ProductImage" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h6>Product Name:</h6>
                        <h5 class="card-title">@product.ProductName</h5>
                        <hr />
                        <h6>Product Description:</h6>
                        <p class="card-text">@product.ProductDescription</p>
                        <h6>Product Price:</h6>
                        <p class="card-text">@product.ProductPrice</p>
                        <h6>Product Type:</h6>
                        <p class="card-text">@product.Type</p>
                        <h6>Product Availability:</h6>
                        <p class="card-text">@product.ProductAvailable</p>
                            <a class="btn btn-primary btn btn-primary display-4" asp-area="" asp-controller="AdminProduct" asp-action="Edit" asp-route-id="@product.Id" style="background: linear-gradient(to right, #D14545, #FFD045);">Edit Product</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
</div>